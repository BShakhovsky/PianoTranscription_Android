<!-- Margins are default per Android Design guidelines -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="176dp"
    android:background="@drawable/drawer_background"
    android:gravity="bottom" android:orientation="vertical"
    android:paddingBottom="16dp" android:paddingStart="16dp" android:paddingEnd="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView style="@style/WrapContent" android:paddingTop="8dp"
        xmlns:app="http://schemas.android.com/apk/res-auto" app:srcCompat="@mipmap/ic_launcher_round"
        xmlns:tools="http://schemas.android.com/tools" tools:ignore="ContentDescription" />

    <TextView android:text="@string/app_name" style="@style/WrapContent"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:paddingTop="8dp"/>

    <TextView android:text="@string/app_name" style="@style/WrapContent" />

</LinearLayout>